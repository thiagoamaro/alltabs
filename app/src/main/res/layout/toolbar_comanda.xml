<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentBottom="true"
    android:elevation="4dp"
    android:background="?attr/colorPrimary"
    android:padding="10dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFinalizar"
        android:background="@drawable/fundodisable"
        android:elevation="4dp"
        android:text="@string/botao_finalizar"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvTotal"
        android:text="Total"
        android:textColor="@color/colorBackground"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/btnFinalizar"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvTotalComanda"
        android:text="@string/valor_zero"
        android:textColor="@color/colorBackground"
        android:textSize="25dp"
        android:layout_toRightOf="@id/txvTotal"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>